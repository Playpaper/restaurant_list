<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳名稱、分類、評分" aria-label="Restaurant Name..."
            value="{{ keyword }}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- restaurant list -->
<div class="container mt-5 mb-5">
  {{#if restaurants}}
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">
        <div class="row row-cols-sm-3">
          {{#each restaurants}}
            <a href="/restaurants/{{ this.id }}" class="text-secondary">
              <div class="card mb-3">
                <div class="img-box">
                  <img class="card-img-top" src="{{ this.image }}"
                  alt="{{ this.name }}">
                </div>
                <div class="card-body p-3">
                  <h6 class="card-title mb-1">{{ this.name }}</h6>
                  <div class="restaurant-category mb-1">
                    <i class="fas fa-utensils pr-2"></i> {{ this.category }}
                  </div>
                  <span class="score badge font-weight-normal">
                    {{ this.rating }}
                    <i class="fas fa-star fa-xs"></i>
                  </span>
                </div>
              </div>
            </a>
          {{/each}}
        </div>
      </div>
    </div>
  {{else}}
    <div class="row justify-content-center text-center">
      <div class="col-6 mb-1">
        <p class="keyword-no-match">沒有符合 <span>"{{ keyword }}"</span> 的餐廳，提供以下分類給您參考：</p>
      </div>
    </div>
    <div class="row justify-content-center text-center align-items-center">
      {{#each category}}
      <div class="col-md-1 col-sm-2 mb-2">
        <a class="btn-category btn btn-warning" href="/search?keyword={{ this }}">{{this}}</a>
      </div>
      {{/each}}
    </div>
  {{/if}}
    
</div>
